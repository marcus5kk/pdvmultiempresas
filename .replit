modules = ["php-8.2", "nodejs-20", "web"]
run = "node index.js"
[agent]
expertMode = true
integrations = ["javascript_database==1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["php", "php81Extensions.pdo", "php81Extensions.pdo_pgsql", "php81Extensions.pgsql", "php81Extensions.session", "php81Extensions.mbstring", "php84", "php84Extensions.pgsql", "php84Extensions.pdo", "php84Extensions.pdo_pgsql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PHP PDV Server"

[[workflows.workflow]]
name = "PHP PDV Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t ."
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
run = ["sh", "-c", "node index.js"]
